// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Image {
  id String @id @default(cuid())
  fileName String @unique
  lat Decimal?
  long Decimal?
  createdAt DateTime @default(now())
}

model Config {
  id Int @id @default(0)
  clockOn Boolean @default(true)
  lastUpdatedConfig DateTime @default(now()) 
  lastUpdatedImages DateTime @default(now())
}
